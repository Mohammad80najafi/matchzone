{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@matchzone/contracts/*": [
        "packages/contracts/src/*"
      ],
      "@matchzone/ui/*": [
        "packages/ui/src/*"
      ],
      "@matchzone/utils/*": [
        "packages/utils/src/*"
      ]
    }
  }
}